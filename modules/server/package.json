{
  "name": "@tsed-testbed/server",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "description": "RESTful API Server",
  "scripts": {
    "db:setup": "cat src/config/db/setup.sql | sqlite3 /tmp/tsed_testbed_dev.db",
    "db:schema:dump": "tbls out sqlite:///tmp/tsed_testbed_dev.db -t yaml -o src/config/db/schema.yaml",
    "db:codegen": "tsnd --transpile-only src/scripts/db/codegen.ts",
    "db:schema:sync": "npm run db:setup && npm run db:schema:dump && npm run db:codegen",
    "build": "npm run barrels && tsc --project tsconfig.compile.json",
    "barrels": "barrelsby --config .barrelsby.json",
    "dev": "npm run barrels && tsnd --inspect --exit-child --cls --ignore-watch node_modules --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test jest"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@tsed/ajv": "^7.18.2",
    "@tsed/common": "^7.18.2",
    "@tsed/core": "^7.18.2",
    "@tsed/di": "^7.18.2",
    "@tsed/engines": "^7.18.2",
    "@tsed/exceptions": "^7.18.2",
    "@tsed/json-mapper": "^7.18.2",
    "@tsed/logger": "^6.3.4",
    "@tsed/logger-file": "^6.3.4",
    "@tsed/openspec": "^7.18.2",
    "@tsed/platform-cache": "^7.18.2",
    "@tsed/platform-exceptions": "^7.18.2",
    "@tsed/platform-koa": "^7.18.2",
    "@tsed/platform-log-middleware": "^7.18.2",
    "@tsed/platform-middlewares": "^7.18.2",
    "@tsed/platform-params": "^7.18.2",
    "@tsed/platform-response-filter": "^7.18.2",
    "@tsed/platform-views": "^7.18.2",
    "@tsed/schema": "^7.18.2",
    "@tsed/swagger": "^7.18.2",
    "ajv": "^8.12.0",
    "barrelsby": "^2.5.1",
    "better-sqlite3": "^8.2.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.4.0",
    "koa-compress": "^5.1.0",
    "koa-override": "^3.0.0",
    "koa-qs": "^3.0.0",
    "lodash": "^4.17.21",
    "sqlite3": "^5.1.6",
    "ts-sql-query": "^1.50.0"
  },
  "devDependencies": {
    "@tsed/cli-plugin-jest": "4.4.3",
    "@types/better-sqlite3": "^7.6.3",
    "@types/jest": "^29.5.0",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^4.0.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-json": "^2.0.20",
    "@types/koa-qs": "^2.0.0",
    "@types/koa-send": "^4.1.3",
    "@types/lodash": "^4.14.191",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ts-sql-codegen": "^3.9.0",
    "tsconfig-paths": "^4.1.2",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
  },
  "tsed": {
    "packageManager": "npm",
    "convention": "default",
    "architecture": "default"
  }
}
